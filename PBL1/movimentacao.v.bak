module controlador(
    input A,      // Entrada A
    input E,      // Entrada E
    input F,      // Entrada F
    input D,      // Entrada D
    output wire movimento1,  // Controle do movimento 1: Carrinho anda para frente
    output wire movimento2,  // Controle do movimento 2: Roda esquerda frente, direita tr치s
    output wire movimento3   // Controle do movimento 3: Roda esquerda tr치s, direita frente
);

// F1 = ~A & ~F & ~E (Carrinho anda para frente)
wire nA, nF, nE;
not u1(nA, A);
not u2(nF, F);
not u3(nE, E);
and u4(movimento1, nA, nF, nE);

// F2 = (~A & ~D & F) | (~A & ~D & E) (Roda esquerda frente, direita tr치s)
wire nD, and1, and2;
not u5(nD, D);
and u6(and1, nA, nD, F);
and u7(and2, nA, nD, E);
or  u8(movimento2, and1, and2);

// F3 = ~A & D & ~E (Roda esquerda tr치s, direita frente)
and u9(movimento3, nA, D, nE);

endmodule
